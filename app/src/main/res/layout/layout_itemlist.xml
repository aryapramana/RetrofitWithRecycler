<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImgView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/postIdLabelTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_label"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/profileImgView"
        android:textSize="8sp"
        android:layout_centerVertical="false"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/postIdTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_toEndOf="@id/postIdLabelTxtView"
        android:textSize="8sp"
        android:layout_centerVertical="false"
        android:layout_marginStart="4dp"
        />

    <TextView
        android:id="@+id/titleTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:layout_below="@id/postIdLabelTxtView"
        android:layout_toEndOf="@+id/profileImgView"
        android:layout_centerVertical="false"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/bodyTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/titleTxtView"
        android:layout_toEndOf="@id/profileImgView"
        android:layout_marginStart="8dp"
        android:textSize="12sp"/>

</RelativeLayout>